<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">

    <div class="article">
      <div class="article-header">
        <h3 class="color-darkblue">Trend Line for Total Market Transactions</h3>
      </div>
      <div class="article-body">
        <canvas id="chilliwack_total_canvas"></canvas>
      </div>
    </div>

    <div class="article">
      <div class="article-header">
        <h3 class="color-darkblue">Property Types</h3>
      </div>
      <div class="article-body">
        <canvas id="chilliwack_type_canvas"></canvas>
      </div>
    </div>

  </div>
  <div class="col-md-2"></div>
</div>



<script>
$(document).ready(function() {

  // stacked bar options
  var options_stack = {
    responsive: true,
    scales: {
      xAxes: [{
        stacked: true
      }],
      yAxes: [{
        stacked: true
      }]
    },
    tooltips: {
      callbacks: {
        label: function(tooltipItem, data) {
          var dataset = data.datasets[tooltipItem.datasetIndex];
          var total = data.datasets[5].data[tooltipItem.index];

          var currentValue = dataset.data[tooltipItem.index];         
          var precentage = Math.floor( ((currentValue/total) * 100) + 0.5 );
          return currentValue + " (" + precentage + "%)";
        }
      }
    }
  };


  // data

  var months = ["June 01", "July 01", "Aug 01", "Sep 01", "Oct 01", "Nov 01", "Dec 01"];
  
  var chilliwack_total = [496,490,505,430,366,325,231];
  var chilliwack_resid_trans = [490,482,493,420,341,319,222];
  var chilliwack_comm_tot = [4,6,7,6,5,5,5];
  var chilliwack_recr_tot = [0,0,1,0,0,0,0];
  var chilliwack_farm_tot = [2,2,4,4,20,0,3];
  var chilliwack_unkn_tot = [0,0,0,0,0,1,1];

  var chilliwack_total_data = {
    labels: months,
    datasets: [
      {
        label: "Total Market Transactions",
        data: chilliwack_total,
        fill: false,
        backgroundColor: 'rgba(75,192,192, 0.7)',
        borderColor: 'rgba(75,192,192, 1)',
        borderWidth: 5,
        borderJoinStyle: 'round',
        lineTension: 0.1
      }
    ]
  };


  var chilliwack_type_data = {
    labels: months,
    datasets: [{
      type: 'bar',
      label: 'Residential',
      data: chilliwack_resid_trans,
      backgroundColor: 'rgba(80, 244, 66, 0.7)',
      borderColor: 'rgba(80, 244, 66, 1)',
      
    }, {
      type: 'bar',
      label: 'Commercial',
      data: chilliwack_comm_tot,
      backgroundColor: 'rgba(66, 244, 206, 0.7)',
      borderColor: 'rgba(66, 244, 206, 1)',
      
    }, {
      type: 'bar',
      label: 'Recreational',
      data: chilliwack_recr_tot,
      backgroundColor: 'rgba(153, 102, 255, 0.7)',
      borderColor: 'rgba(153, 102, 255, 1)',
      
    }, {
      type: 'bar',
      label: 'Farm',
      data: chilliwack_farm_tot,
      backgroundColor: 'rgba(244, 232, 66, 0.7)',
      borderColor: 'rgba(244, 232, 66, 1)',
      
    }, {
      type: 'bar',
      label: 'Unknown',
      data: chilliwack_unkn_tot,
      backgroundColor: 'rgba(255, 159, 64, 0.7)',
      borderColor: 'rgba(255, 159, 64, 1)',
      
    }, {
      type: 'line',
      label: "Total Market Transactions",
      data: chilliwack_total,
      fill: false,
      backgroundColor: 'rgba(75,192,192, 0.7)',
      borderColor: 'rgba(75,192,192, 1)',
      borderWidth: 3,
      borderJoinStyle: 'round',
      lineTension: 0.1
    }]
  };



  // canvas display

  var chilliwack_total_canvas = new Chart($("#chilliwack_total_canvas"), {
    type: 'line',
    data: chilliwack_total_data
  });

  //var chilliwack_type_canvas = document.getElementById("chilliwack_type_canvas").getContext("2d");
  //chilliwack_type_canvas.canvas.width = 500;
  //chilliwack_type_canvas.canvas.height = 300;
  var chilliwack_type_chart = new Chart($("#chilliwack_type_canvas"), {
    type: "bar",
    data: chilliwack_type_data,
    options: options_stack
  });


});
</script>