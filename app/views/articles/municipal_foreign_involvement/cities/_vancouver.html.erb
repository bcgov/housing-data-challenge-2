<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">

    <div class="article">
      <div class="article-header">
        <h3 class="color-darkblue">Trend Line for Total Market Transactions</h3>
      </div>
      <div class="article-body">
        <canvas id="vancouver_no_foreign_canvas"></canvas>
      </div>
    </div>

    <div class="article">
      <div class="article-header">
        <h3 class="color-darkblue">Property Types</h3>
      </div>
      <div class="article-body">
        <canvas id="vancouver_no_foreign_type_canvas"></canvas>
      </div>
    </div>

  </div>
  <div class="col-md-2"></div>
</div>


<script>
$(document).ready(function() {

  // stacked bar options
  var options_stack = {
    responsive: true,
    scales: {
      xAxes: [{
        stacked: true
      }],
      yAxes: [{
        stacked: true
      }]
    },
    tooltips: {
      callbacks: {
        label: function(tooltipItem, data) {
          var dataset = data.datasets[tooltipItem.datasetIndex];
          var total = data.datasets[2].data[tooltipItem.index];

          var currentValue = dataset.data[tooltipItem.index];         
          var precentage = Math.floor( ((currentValue/total) * 100) + 0.5 );
          return currentValue + " (" + precentage + "%)";
        }
      }
    }
  };

  // data

  var months = ["June 01", "July 01", "Aug 01", "Sep 01", "Oct 01", "Nov 01", "Dec 01"];

  var vancouver_no_mkt_trans = [2190,2089,1516,1241,966,1130,850];
  var vancouver_no_foreign = [195,364,15,37,26,51,37];
  var vancouver_no_citizen = [];

  for (var i = 0; i < vancouver_no_mkt_trans.length; i++) {
    vancouver_no_citizen.push(vancouver_no_mkt_trans[i] - vancouver_no_foreign[i]);
  }

  var vancouver_no_foreign_data = {
    labels: months,
    datasets: [
      {
        label: "Foreign Involvement Transactions",
        data: vancouver_no_foreign,
        fill: false,
        backgroundColor: 'rgba(75,192,192, 0.7)',
        borderColor: 'rgba(75,192,192, 1)',
        borderWidth: 5,
        borderJoinStyle: 'round',
        lineTension: 0.1
      }
    ]
  };

  var vancouver_no_foreign_type_data = {
    labels: months,
    datasets: [{
      type: 'bar',
      label: 'Citizens/PR Transactions',
      data: vancouver_no_citizen,
      backgroundColor: 'rgba(255, 159, 64, 0.7)',
      borderColor: 'rgba(255, 159, 64, 1)',
    }, {
      type: 'bar',
      label: 'Foreign Involvement Transactions',
      data: vancouver_no_foreign,
      backgroundColor: 'rgba(244, 232, 66, 0.7)',
      borderColor: 'rgba(244, 232, 66, 1)',
    }, {
      type: 'line',
      label: "Total Market Transactions",
      data: vancouver_no_mkt_trans,
      fill: false,
      backgroundColor: 'rgba(75,192,192, 0.7)',
      borderColor: 'rgba(75,192,192, 1)',
      borderWidth: 3,
      borderJoinStyle: 'round',
      lineTension: 0.1
    }]
  };


  // canvas display

  var vancouver_no_foreign_canvas = new Chart($("#vancouver_no_foreign_canvas"), {
    type: 'line',
    data: vancouver_no_foreign_data
  });

  //var vancouver_no_foreign_type_canvas = document.getElementById("vancouver_no_foreign_type_canvas").getContext("2d");
  //vancouver_no_foreign_type_canvas.canvas.width = 500;
  //vancouver_no_foreign_type_canvas.canvas.height = 300;
  var vancouver_no_foreign_type_canvas = new Chart($("#vancouver_no_foreign_type_canvas"), {
    type: "bar",
    data: vancouver_no_foreign_type_data,
    options: options_stack
  });


});
</script>