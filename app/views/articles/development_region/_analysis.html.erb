
<!-- Left panel -->
<div class="col-md-9" id="dev_region_charts">

  <select id="dev_region_select">
    <option value="housing_market_choropleth_map">Choropleth Map for Housing Market</option>
    <option value="overview_housing_market">Overview of Housing Market</option>
    <option value="fmv_ptt_population">Sum of Fair Market Value, Sum of Property Transfer Tax and Population</option>
  </select>

  <select class="sub-select" id="overview_housing_market_select" style="display:none">
    <option value="">Select</option>
    <option value="total_market_trans">Total Market Transactions</option>
    <option value="sum_fmv">Sum of Fair Market Value</option>
    <option value="sum_ptt">Sum of Property Transfer Tax</option>
    <option value="housing_types">Housing Types</option>
  </select>


  <div class="article" id="housing_market_choropleth_map">
    <div class="article-header">
      <h3 class="color-darkblue">Choropleth Map for Housing Market</h3>
      <p class="color-grey">Source: BC Data Catalogue</p>
    </div>

    <div class="article-body">
      <%= render "articles/development_region/dev_region_map" %>
    </div>
  </div>  

  <div class="article" id="overview_housing_market" style="display:none">
    <div class="article-header">
      <h3 class="color-darkblue">Overview of Housing Market</h3>
      <p class="color-grey">Source: BC Data Catalogue</p>
    </div>

    <div class="article-body">
      <%= render "articles/development_region/overview_housing_market" %>
    </div>
  </div>


  <div class="article" id="fmv_ptt_population" style="display:none">
    <div class="article-header">
      <h3 class="color-darkblue">Sum of Fair Market Value VS. Population with Sum of Property Transfer Tax</h3>
      <p class="color-grey">Source: BC Data Catalogue and BC Stats</p>
    </div>

    <div class="article-body">
      <%= render "articles/development_region/fmv_population" %>
    </div>
  </div>
</div>


<!-- Right panel -->
<div class="col-md-3">
  <%= render "articles/util/right_panel_detail" %>
</div>


<script>
$(document).ready(function() {

  var start = "#dev_region_charts ";

  $(start + "#dev_region_select").on("change", function() {
    var dev_region_select = $(this).val();

    if (dev_region_select == "housing_market_choropleth_map") {
      $(start + ".article").hide();
      $(start + "#housing_market_choropleth_map").show();

      $(start + ".sub-select").hide();
    
    } else if (dev_region_select == "overview_housing_market") {
      $(start + ".article").hide();
      $(start + ".canvases").hide();
      $(start + "#overview_housing_market").show();

      $(start + ".sub-select").hide();
      $(start + "#overview_housing_market_select").show();
    
    } else if (dev_region_select == "fmv_ptt_population") {
      $(start + ".article").hide();
      $(start + ".canvases").show();
      $(start + "#fmv_ptt_population").show();

      $(start + ".sub-select").hide();
    
    } else {
      $(start + ".article").hide();
      $(start + ".sub-select").hide();
    }

  });

  $(start + "#overview_housing_market_select").on("change", function() {
    var overview_housing_market_select = $(this).val();

    if (overview_housing_market_select == "total_market_trans") {
      $(start + ".canvases").hide();
      $(start + "#total_market_trans").show();

    } else if (overview_housing_market_select == "sum_fmv") {
      $(start + ".canvases").hide();
      $(start + "#sum_fmv").show();

    } else if (overview_housing_market_select == "sum_ptt") {
      $(start + ".canvases").hide();
      $(start + "#sum_ptt").show();

    } else if (overview_housing_market_select == "housing_types") {
      $(start + ".canvases").hide();
      $(start + "#housing_types").show();

    } else {
      $(start + ".canvases").hide();
    }


  });


});
</script>